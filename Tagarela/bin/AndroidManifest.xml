<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.furb.tagarela"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera" >
    </uses-feature>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.furb.tagarela.view.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.furb.tagarela.view.activities.PostActivity"
            android:label="@string/title_activity_post" >
        </activity>
        <activity
            android:name="br.com.furb.tagarela.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="br.com.furb.tagarela.game.view.PrincipalJogo"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="br.com.furb.tagarela.game.view.Jogo"
            android:label="@string/title_activity_jogo"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="br.com.furb.tagarela.game.view.GerenciarLista"
            android:label="@string/title_activity_gerenciar_lista" >
        </activity>
        <activity
            android:name="br.com.furb.tagarela.view.activities.ViewSymbolsActivity"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>